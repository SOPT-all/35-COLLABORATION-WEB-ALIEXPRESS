{
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "parser": "@typescript-eslint/parser", // TypeScript를 위한 파서 설정
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module", // import/export 사용
      "project": "./tsconfig.json" // TypeScript 설정 파일 연결
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb", // Airbnb 스타일 가이드
      "airbnb-typescript", // TypeScript 확장을 위한 Airbnb
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "plugins": ["react", "react-hooks", "@typescript-eslint"], // 필요한 플러그인 로드
    "rules": {
      // React 관련 규칙
      "react/require-default-props": "off", //선택적 프로퍼티 사용이 가능하도록
      "react/react-in-jsx-scope": "off", // react 17이후 불필요
      "react/jsx-filename-extension": ["warn", { "extensions": [".tsx"] }], // JSX는 .tsx 파일에서만 사용 권장
      "react/prop-types": "off", // TypeScript를 사용하므로 PropTypes 필요 없음
      "no-use-before-define": ["error", { "functions": true, "classes": true, "variables": false }], //호이스팅 방지
      //TypeScript 관련 규칙
      "@typescript-eslint/no-unused-vars": ["error"], // 미사용 변수에 대해 경고
  
      //Import 관련 규칙
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
  
      // 코드 컨벤션 관련 규칙
      "no-console": ["warn", { "allow": ["warn", "error"] }], // console.log 사용 시 경고
      "func-style": ["error", "expression"], // 함수 표현식만 허용
      "camelcase": ["error", { "properties": "always" }], // 함수명, 변수명은 카멜케이스로 작성
      "space-infix-ops": ["warn"], // 연산자 사이에 공백 필수
      "@typescript-eslint/no-explicit-any": "error", // any 사용 금지
      "react/jsx-no-inline-styles": "error" // Inline Style 사용 금지
    },
  
    "overrides": [
      {
        "files": "**/*.+(ts|tsx)",
        "plugins": ["@typescript-eslint"],
        "extends": ["plugin:@typescript-eslint/recommended"]
      },
      {
        "files": ["**/__tests__/**/*", "**/*.{spec,test}.*"],
        "env": {
          "jest/globals": true
        },
        "plugins": ["jest", "jest-dom", "testing-library"],
        "extends": [
          "plugin:jest/recommended",
          "plugin:jest-dom/recommended",
          "plugin:testing-library/react"
        ]
      }
    ],
  
    "settings": {
      "react": {
        "version": "detect" // 설치된 React 버전에 따라 자동 감지
      },
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"] // Node.js가 인식할 확장자 설정
        }
      }
    }
  }